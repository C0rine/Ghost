<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.mprog.ghost" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GhostMainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GhostPlayerInput"
            android:label="@string/title_activity_ghost_player_input" >
        </activity>
        <activity
            android:name=".GhostInGame"
            android:label="@string/title_activity_ghost_in_game" >
        </activity>
        <activity
            android:name=".GhostWinScreen"
            android:label="@string/title_activity_ghost_win_screen" >
        </activity>
        <activity
            android:name=".GhostHighscores"
            android:label="@string/title_activity_ghost_highscores" >
        </activity>
        <activity
            android:name=".GhostSettings"
            android:label="@string/title_activity_ghost_settings" >
        </activity>
        <activity
            android:name=".GhostInstructions"
            android:label="@string/title_activity_ghost_instructions" >
        </activity>
    </application>

</manifest>
